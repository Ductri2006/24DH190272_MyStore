@model _24DH190272_MyStore.Models.LoginVM

@{
    ViewBag.Title = "ĐĂNG NHẬP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="authen-container">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Chào mừng bạn quay trở lại!</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "text-align:center; display:block;" })

        <div class="form-group">
            <label class="control-label">Tên đăng nhập</label>
            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tài khoản..." } })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Mật khẩu</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu..." })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="margin-top: 10px; width: 100%; text-align: center; padding: 0;">
            <input type="submit" value="Đăng nhập" class="btn btn-primary" style="width: 100% !important; display: block !important; margin-left: auto !important; margin-right: auto !important;" />
        </div>

        <div class="authen-link" style="margin-top: 20px;">
            <span>Chưa có tài khoản? </span>
            @Html.ActionLink("Đăng ký ngay", "Register")
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
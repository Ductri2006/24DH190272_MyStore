@model _24DH190272_MyStore.Models.Customer

@{
    ViewBag.Title = "CHỈNH SỬA HỒ SƠ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="authen-container" style="max-width: 600px;">
    <h2>CHỈNH SỬA HỒ SƠ CÁ NHÂN</h2>
    <h4>Cập nhật thông tin chi tiết của bạn</h4>

    @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        // Hiển thị thông báo lỗi (nếu có)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        // Giữ lại CustomerID để biết bản ghi nào cần sửa (dạng ẩn)
        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.Username) // Không cho sửa Username

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerName, "Họ và tên:", new { @class = "control-label" })
            @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerEmail, "Email:", new { @class = "control-label" })
            @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-control", type = "email" } })
            @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerPhone, "Số điện thoại:", new { @class = "control-label" })
            @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerAddress, "Địa chỉ:", new { @class = "control-label" })
            @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
        </div>

        <div style="margin-top: 30px;"></div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 10px;">
                @Html.ActionLink("Hủy bỏ", "ProfileInfo", "Account", null, new { @class = "btn btn-back" })
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input type="submit" value="LƯU THAY ĐỔI" class="btn btn-primary" />
            </div>
        </div>
    }
</div>